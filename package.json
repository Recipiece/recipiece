{
  "name": "recipiece",
  "version": "1.0.0",
  "repository": "git@github.com:sjyn/Recipiece.git",
  "author": "Steven Rosendahl <steven.ak.rosendahl@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "serve:dev:backend": "yarn --cwd ./recipiece_backend run:dev",
    "serve:dev:frontend": "yarn --cwd ./recipiece_frontend run:dev",
    "serve:test:backend": "yarn --cwd ./recipiece_backend run:test",
    "serve:test:frontend": "yarn --cwd ./recipiece_frontend run:test",
    "serve:local-db": "docker compose -f ./docker-compose.dev.yaml up",
    "serve:recipe-importer": "cd ./recipiece_recipe_importer && PATH=\"../.venv/bin:$PATH\" fastapi dev src/main.py --host 0.0.0.0 --port 8081",
    "serve:dev": "concurrently names=database,backend,frontend,importer \"yarn serve:local-db\" \"yarn serve:dev:backend\" \"yarn serve:dev:frontend\" \"yarn serve:recipe-importer\"",
    "serve:test": "concurrently names=database,backend,frontend,importer \"yarn serve:local-db\" \"yarn serve:test:backend\" \"yarn serve:test:frontend\" \"yarn serve:recipe-importer\"",
    "lint:backend": "yarn --cwd ./recipiece_backend lint",
    "lint:frontend": "yarn --cwd ./recipiece_frontend lint",
    "lint:types": "yarn --cwd ./recipiece_common/recipiece_types lint",
    "lint:database": "yarn --cwd ./recipiece_common/recipiece_database lint",
    "lint:conversion": "yarn --cwd ./recipiece_common/recipiece_conversion lint",
    "lint:test": "yarn --cwd ./recipiece_common/recipiece_test lint",
    "lint:constant": "yarn --cwd ./recipiece_common/recipiece_constant lint",
    "lint": "yarn lint:backend && yarn lint:frontend && yarn lint:types && yarn lint:database && yarn lint:conversion && yarn lint:test",
    "install:root": "yarn install",
    "install:backend": "yarn --cwd ./recipiece_backend install",
    "install:constants": "yarn --cwd ./recipiece_common/recipiece_constant install",
    "install:conversion": "yarn --cwd ./recipiece_common/recipiece_conversion install",
    "install:database": "yarn --cwd ./recipiece_common/recipiece_database install",
    "install:test": "yarn --cwd ./recipiece_common/recipiece_test install",
    "install:types": "yarn --cwd ./recipiece_common/recipiece_types install",
    "install:e2e": "yarn --cwd ./recipiece_e2e install",
    "install:frontend": "yarn --cwd ./recipiece_frontend install",
    "install:recipe_importer": "python3 -m venv .venv && PATH=\"./.venv/bin:$PATH\" pip install -r ./recipiece_recipe_importer/requirements.txt",
    "install:fresh": "yarn install:root && yarn install:backend && yarn install:constants && yarn install:conversion && yarn install:database && yarn install:test && yarn install:types && yarn install:e2e && yarn install:frontend && yarn install:recipe_importer"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}